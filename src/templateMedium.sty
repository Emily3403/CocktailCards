\apptocmd{\sum}{\limits}{}{}
\apptocmd{\max}{\limits}{}{}
\apptocmd{\min}{\limits}{}{}
\apptocmd{\bigcap}{\limits}{}{}
\apptocmd{\bigcup}{\limits}{}{}
